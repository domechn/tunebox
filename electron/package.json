{
  "name": "vintage-radio-electron",
  "version": "1.0.0",
  "description": "Vintage Radio - YouTube Music Desktop App",
  "author": {
    "name": "domchan",
    "email": "domchan@users.noreply.github.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/domchan/youtube-music-deskto.git"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package:mac": "CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac --publish never",
    "package:win": "electron-builder --win --publish never",
    "package:linux": "electron-builder --linux --publish never",
    "package:all": "electron-builder -mwl --publish never"
  },
  "build": {
    "appId": "com.vintageradio.app",
    "productName": "Vintage Radio",
    "directories": {
      "output": "dist",
      "buildResources": "../build"
    },
    "files": [
      "main.js",
      "preload.js",
      "ytmusic-control.js",
      "../dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../dist",
        "to": "dist",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.music",
      "icon": "icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "win": {
      "icon": "icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "linux": {
      "icon": "icon.png",
      "maintainer": "domchan <domchan@users.noreply.github.com>",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "category": "Audio",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Vintage Radio"
    },
    "publish": []
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.8.1"
  }
}
